<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/statusAvatarView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_konki" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/statusAvatarView"
        android:layout_toStartOf="@id/statusDateTextView"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statusNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="da"/>

        <TextView
            android:id="@+id/statusMsgTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:text="Hello, developers!!!"/>

    </LinearLayout>


    <TextView
        android:id="@+id/statusDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:text="19:00 PM"/>

    <TextView
        android:id="@+id/statusAnotherDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_above="@id/statusDateTextView"
        android:textColor="@color/purple_500"
        android:textSize="18sp"
        android:text="04.02.2023"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>